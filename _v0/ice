# shellcheck shell=sh
# shellcheck disable=SC2039

___X_CMD_THEME_PROMPT_GET_INFO(){

  case "$(___X_CMD_THEME_GET_PROMPT_INFO_EXE)" in
    git)
      # printf "${PREFIX}git:${___X_CMD_THEME_FG_CYAN}$(___X_CMD_THEME_GET_PROMPT_INFO_VALUE)${___X_CMD_THEME_RESET} \n"
      printf "%s" "${PREFIX}git:$(___X_CMD_THEME_COLOR fg cyan)$(___X_CMD_THEME_GET_PROMPT_INFO_VALUE)$(___X_CMD_THEME_COLOR)"
    ;;
    *)
      return
    ;;
  esac
}

# Prompt format:
___X_CMD_THEME_PROMPT_FORMAT(){
  local PRE_ICON='üí†'
  local SYMBOL='·êÖ'
  local USERNAME="$(___X_CMD_THEME_COLOR fg cyan)${___X_CMD_THEME_USER}$(___X_CMD_THEME_COLOR)"
  local PROMPT_PATH="$(___X_CMD_THEME_COLOR bfg yellow)${___X_CMD_THEME_FULL_PATH}$(___X_CMD_THEME_COLOR)"
  local PROMPT_TIME="[${___X_CMD_THEME_TIME_24_H_M_S}]"

  local PREFIX=" $(___X_CMD_THEME_COLOR)on "
  local PREFIX_INFO=":$(___X_CMD_THEME_COLOR fg cyan)"
  local SUFFIX="$(___X_CMD_THEME_COLOR)"
  printf "%s" "
${PRE_ICON}${USERNAME} ${PROMPT_PATH} \$(___X_CMD_THEME_PROMPT_GET_INFO) ${PROMPT_TIME}
$(___X_CMD_THEME_COLOR bfg green)${SYMBOL}$(___X_CMD_THEME_COLOR) "

}
